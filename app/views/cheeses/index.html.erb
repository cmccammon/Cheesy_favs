<p id="notice"><%= notice %></p>

<h1>Listing Cheeses</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cheeses.each do |cheese| %>
      <tr>
        <td><%= cheese.name %></td>
        <td><%= link_to 'Show', cheese, class: 'btn btn-default btn-xs' %></td>
        <td><input type="checkbox"> Add to favorite</td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="checkbox">
  <label>
    <input type="checkbox"> Check me out
  </label>
</div>

<br>

<%= link_to 'New Cheese', new_cheese_path %>
