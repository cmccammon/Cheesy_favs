<p id="notice"><%= notice %></p>

<h1>Listing Cheeses</h1>

  <table class='table table-striped'>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <div class="btn-group" role="group" aria-label="...">
    <tbody>
      <% @cheeses.each do |cheese| %>
        <tr>
          <td><%= cheese.name %></td>
          <td><%= link_to 'Show', cheese, class: 'btn btn-default btn-xs' %></td>
          <td><%= link_to "Mark Favorite", favorite_path(:favorite => { :cheese_id => cheese }), :method => :post, class: 'btn btn-default btn-xs' %></td>
        </tr>
      <% end %>
    </tbody>
    </div>
  </table>
