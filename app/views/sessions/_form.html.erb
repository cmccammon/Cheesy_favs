<h2>Please login to continue or create a new login</h2>

<%= form_tag login_path do %>
  <div class="field">
    <p> name: </p>
    <%= text_field_tag :name %>
  </div>

  <div class="field">
    <p> password: </p>
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <br>
  <%= submit_tag 'submit', class: 'btn btn-info btn-xs' %>
  <%= link_to 'Create New User', new_user_path, class: 'btn btn-info btn-xs' %>
  </div>

<% end %>
