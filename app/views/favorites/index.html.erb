<h1>Listing Favorites</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Users</th>
      <th>Cheeses</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= favorite.user.name%></td>
        <td><%= favorite.cheese.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cheese', new_cheese_path, class: 'btn btn-default btn-xs' %>
